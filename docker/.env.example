# RAG Chatbot PWA - Environment Configuration Template
# Copy this file to .env and configure your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database password (required for production)
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Database connection URL (auto-constructed from above)
# DATABASE_URL=postgresql://raguser:${POSTGRES_PASSWORD}@postgres:5432/ragchatbot

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis password for secure access
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
# JWT secret key for token signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your_jwt_secret_key_64_chars_minimum_length_required_for_security

# =============================================================================
# API INTEGRATIONS
# =============================================================================
# Google Gemini API key for AI functionality (required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub OAuth (optional - for repository integration)
# Get from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# MONITORING & SECURITY
# =============================================================================
# Grafana admin password for monitoring dashboard
GRAFANA_PASSWORD=your_grafana_admin_password

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your domain name for production deployment
DOMAIN=your-domain.com

# Frontend URL for CORS and redirects
FRONTEND_URL=https://your-domain.com

# API URL for frontend
API_URL=https://your-domain.com/api

# =============================================================================
# SSL CERTIFICATES
# =============================================================================
# SSL certificate paths (use Let's Encrypt or your own certificates)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# S3-compatible storage for backups (optional)
BACKUP_S3_ENDPOINT=
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Local backup retention (days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Gunicorn workers (recommended: 2 * CPU cores + 1)
GUNICORN_WORKERS=4

# Celery worker concurrency
CELERY_CONCURRENCY=4

# Maximum file upload size (bytes)
MAX_UPLOAD_SIZE=104857600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=structured

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_USER_REGISTRATION=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_MONITORING=true
ENABLE_BACKUPS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limit (requests per minute)
API_RATE_LIMIT=60

# Authentication rate limit (attempts per minute)
AUTH_RATE_LIMIT=5

# =============================================================================
# DEVELOPMENT SETTINGS (set to false for production)
# =============================================================================
DEBUG=false
DEVELOPMENT=false
TESTING=false