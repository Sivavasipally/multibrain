# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://raguser:${POSTGRES_PASSWORD}@postgres:5432/ragchatbot

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-here-use-openssl-rand-hex-32

# AI/ML Configuration
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# OAuth Configuration (Optional)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Application Configuration
FLASK_ENV=production
FRONTEND_URL=https://your-domain.com
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=104857600

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-admin-password

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Security Configuration
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Performance Configuration
WORKERS=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
TIMEOUT=120

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_GITHUB_OAUTH=true
ENABLE_FILE_UPLOAD=true
ENABLE_REPOSITORY_INTEGRATION=true
ENABLE_DATABASE_INTEGRATION=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=The application is currently under maintenance. Please try again later.
